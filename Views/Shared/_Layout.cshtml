<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Inventory App</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-dark text-light">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <!-- Center Inventory System Logo -->
        <a class="navbar-brand mx-auto text-light" href="#">Inventory System</a>

        <!-- Toggle Button for Mobile -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Nav Items -->
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
                <!-- Home Link -->
                <li class="nav-item">
                    <a class="nav-link btn btn-dark text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <!-- Inventory Link -->
                <li class="nav-item">
                    <a class="nav-link btn btn-dark text-white" asp-area="" asp-controller="Inventory" asp-action="Index">Inventory</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link btn btn-dark text-white" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
                </li>
                <!-- Suppliers Link -->
                <li class="nav-item">
                    <a class="nav-link btn btn-dark text-white" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a>
                </li>
                <!-- Transactions Link -->
                <li class="nav-item">
                    <a class="nav-link btn btn-dark text-white" asp-area="" asp-controller="Transaction" asp-action="Index">Transactions</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-center p-3">
        <p>&copy; 2025 My Inventory System</p>
    </footer>

    <!-- Bootstrap JS and Dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/jquery/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
