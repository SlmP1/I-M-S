@model IMS.Models.Supplier

@{
    ViewData["Title"] = "Delete Supplier";
}

<h2>Delete Supplier</h2>

<h3>Are you sure you want to delete the following supplier?</h3>

<div>
    <h4>Supplier: @Model.SupplierName</h4>
    <p>Contact Information: @Model.ContactInfo</p>
    <p>Address: @Model.Address</p>
</div>

<form method="post">
    <input type="hidden" asp-for="SupplierId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

