@model IEnumerable<IMS.Models.Transaction>

@{
    ViewData["Title"] = "Transaction Index";
}

<h1>Transaction Index</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th> <!-- Serial number column -->
            <th scope="col">Product</th>
            <th scope="col">Quantity</th>
            <th scope="col">Transaction Type</th>
            <th scope="col">Transaction Date</th>
            <th scope="col">Location</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td> <!-- Serial number for each row -->
                <td>@item.value.Product?.ProductName</td>
                <td>@item.value.Quantity</td>
                <td>@item.value.TransactionType</td>
                <td>@item.value.TransactionDate?.ToString("yyyy-MM-dd")</td>
                <td>@item.value.Location</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.value.TransactionId" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@item.value.TransactionId" class="btn btn-warning">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.value.TransactionId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
