@model IEnumerable<IMS.Models.Inventory>

@{
    ViewData["Title"] = "Inventory";
}

<div class="container mt-4">
    <h2>Inventory List</h2>
    <a href="@Url.Action("Create", "Inventory")" class="btn btn-success mb-3">Add New Inventory Item</a>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Quantity</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inventory in Model)
            {
                <tr>
                    <td>@inventory.Id</td>
                    <td>@inventory.Quantity</td>
                    <td>@inventory.Location</td>
                    <td>
                        <a href="@Url.Action("Update", "Inventory", new { id = inventory.Id })" class="btn btn-warning">Update</a>
                        <a href="@Url.Action("Delete", "Inventory", new { id = inventory.Id })" class="btn btn-danger">Delete</a>
                        <a href="@Url.Action("Details", "Inventory", new { id = inventory.Id })" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
