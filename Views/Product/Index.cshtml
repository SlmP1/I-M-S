@model IEnumerable<IMS.Models.Product>

@{
    ViewData["Title"] = "Product Index";
}

<h1>Product Index</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Add New Item</a>
</div>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th> <!-- Serial number column -->
            <th scope="col">Product Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Supplier</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Select((value, index) => new { value, index }))
        {
            <tr>
                <td>@(item.index + 1)</td> <!-- Serial number for each row -->
                <td>@item.value.ProductName</td>
                <td>@item.value.Category</td>
                <td>@item.value.Price</td>
                <td>@item.value.Supplier?.SupplierName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.value.ProductId" class="btn btn-info">Details</a>
                    <a asp-action="Update" asp-route-id="@item.value.ProductId" class="btn btn-warning">Update</a>
                    <a asp-action="Delete" asp-route-id="@item.value.ProductId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
